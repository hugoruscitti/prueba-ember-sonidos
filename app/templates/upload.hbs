<p>Para subir un sonido a la galería tenés que
  completar este formulario:</p>

{{#if error}}
  <div class='alert alert-danger'>{{error}}</div>
{{/if}}

<form class="form-horizontal" {{action "upload" on="submit"}} enctype="multipart/form-data">

  <div class="form-group form-group">
      <label class="col-sm-2 control-label" for="formGroupInputLarge">Nombre</label>

      <div class="col-sm-10">
        {{input class="form-control" type="text" value=name size=10}}
      </div>
  </div>

  <div class="form-group form-group">
      <label class="col-sm-2 control-label" for="formGroupInputLarge">Sonido .mp3</label>

      <div class="col-sm-10">
        <input class="form-control" id="file" type="file" name="file" placeholder="Un nombre">
      </div>
  </div>


  <div class="form-group form-group">
      <div class="col-sm-2"></div>
      <div class="col-sm-10">
        <input type='submit' class='btn btn-success' value="Subir">
      </div>
  </div>


</form>
